class Student:
    def __init__(self, first_name, last_name, age):
        #Initialize a new Student object.
        self.first_name = first_name
        self.last_name = last_name
        self.age = age
    def display_info(self):
        #Display the student's information.
        print(f"Student Name: {self.first_name} {self.last_name}")
        print(f"Age: {self.age}")
    def __str__(self):
        #Display the student's information as a string.
        return f"Student Name: {self.first_name} {self.last_name} Age: {self.age}"
    def get_email(self):
        return f'{self.first_name} {self.last_name}@emobilis.ac.ke'
# Create a new student instance
student1= Student("John", "Doe", 20)
student2= Student("Mary", "Jones", 18)
# Display the student's information
student1.display_info()
print(student2)
print(student2.get_email())